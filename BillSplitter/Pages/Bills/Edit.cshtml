@page
@model BillSplitter.Pages.Bills.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Bill</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Bill.Id" />
            <div class="form-group">
                <label asp-for="Bill.Description" class="control-label"></label>
                <input asp-for="Bill.Description" class="form-control" />
                <span asp-validation-for="Bill.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bill.Amount" class="control-label"></label>
                <input asp-for="Bill.Amount" class="form-control" />
                <span asp-validation-for="Bill.Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bill.PaidDate" class="control-label"></label>
                <input asp-for="Bill.PaidDate" class="form-control" />
                <span asp-validation-for="Bill.PaidDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bill.PaidByRoomMateId" class="control-label"></label>
                <select asp-for="Bill.PaidByRoomMateId" class="form-control" asp-items="ViewBag.PaidByRoomMateId"></select>
                <span asp-validation-for="Bill.PaidByRoomMateId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
